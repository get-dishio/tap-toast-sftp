{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Item Selection Details Schema",
  "type": "object",
  "properties": {
    "location": {
      "type": ["string", "null"],
      "description": "Restaurant Location"
    },
    "order_id": {
      "type": ["string", "null"],
      "description": "Order ID"
    },
    "order_num": {
      "type": ["string", "null"],
      "description": "Order Number"
    },
    "sent_date": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Timestamp for Item Send Time"
    },
    "order_date": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Timestamp for Order Open Time"
    },
    "check_id": {
      "type": ["string", "null"],
      "description": "Check ID"
    },
    "server": {
      "type": ["string", "null"],
      "description": "Name of the server who created order"
    },
    "table": {
      "type": ["string", "null"],
      "description": "Number of Table"
    },
    "dining_area": {
      "type": ["string", "null"],
      "description": "Name of Dining Area"
    },
    "service": {
      "type": ["string", "null"],
      "description": "Daypart"
    },
    "dining_option": {
      "type": ["string", "null"],
      "description": "Dining Options (defined by restaurant)"
    },
    "item_selection_id": {
      "type": ["string", "null"],
      "description": "Item Selection ID"
    },
    "item_id": {
      "type": ["string", "null"],
      "description": "Item ID"
    },
    "master_id": {
      "type": ["string", "null"],
      "description": "Item Master ID"
    },
    "sku": {
      "type": ["string", "null"],
      "description": "SKU"
    },
    "plu": {
      "type": ["string", "null"],
      "description": "PLU"
    },
    "menu_item": {
      "type": ["string", "null"],
      "description": "Item Name"
    },
    "menu_subgroups": {
      "type": ["string", "null"],
      "description": "Item Subgroup Name"
    },
    "menu_group": {
      "type": ["string", "null"],
      "description": "Item Group Name"
    },
    "menu": {
      "type": ["string", "null"],
      "description": "Menu Name"
    },
    "sales_category": {
      "type": ["string", "null"],
      "description": "Sales Category Name"
    },
    "gross_price": {
      "type": ["number", "null"],
      "description": "Gross Sale Price of Item"
    },
    "discnt": {
      "type": ["number", "null"],
      "description": "Discount"
    },
    "discount": {
      "type": ["number", "null"],
      "description": "Discount amount"
    },
    "net_price": {
      "type": ["number", "null"],
      "description": "Net Price (Gross - Discount)"
    },
    "qty": {
      "type": ["number", "null"],
      "description": "Quantity"
    },
    "tax": {
      "type": ["number", "null"],
      "description": "Taxes"
    },
    "void": {
      "type": ["boolean", "string", "null"],
      "description": "True or False"
    },
    "deferred": {
      "type": ["boolean", "string", "null"],
      "description": "Indicates whether the item has been purchased but not delivered"
    },
    "tax_exempt": {
      "type": ["boolean", "string", "null"],
      "description": "Indicates whether tax payments are required for the check"
    },
    "tax_inclusion_option": {
      "type": ["string", "null"],
      "description": "Indicates whether tax payments are included in the check amount"
    },
    "dining_option_tax": {
      "type": ["string", "null"],
      "description": "A description of tax payments applied because of the dining option for the check"
    },
    "tab_name": {
      "type": ["string", "null"],
      "description": "A name assigned to the check"
    },
    "location_id": {
      "type": ["string", "null"],
      "description": "Location identifier from configuration"
    },
    "date": {
      "type": ["string", "null"],
      "description": "Date folder name from SFTP path"
    }
  },
  "required": ["location_id", "date"]
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sales Schema",
  "type": "object",
  "properties": {
    "order_id": {
      "type": ["string", "null"],
      "description": "Unique order identifier"
    },
    "order_date": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Date and time of the order"
    },
    "restaurant_id": {
      "type": ["string", "null"],
      "description": "Restaurant identifier"
    },
    "revenue": {
      "type": ["number", "null"],
      "description": "Total revenue from the order"
    },
    "tax": {
      "type": ["number", "null"],
      "description": "Tax amount"
    },
    "tip": {
      "type": ["number", "null"],
      "description": "Tip amount"
    },
    "payment_type": {
      "type": ["string", "null"],
      "description": "Method of payment"
    },
    "location_id": {
      "type": ["string", "null"],
      "description": "Location identifier"
    }
  },
  "required": ["order_id", "location_id"]
}

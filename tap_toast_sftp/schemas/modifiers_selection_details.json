{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Modifiers Selection Details Schema",
  "type": "object",
  "properties": {
    "location": {
      "type": ["string", "null"],
      "description": "Restaurant Location"
    },
    "order_id": {
      "type": ["string", "null"],
      "description": "Order ID"
    },
    "order_num": {
      "type": ["string", "null"],
      "description": "Order Number"
    },
    "sent_date": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Timestamp for Item Send Time"
    },
    "order_date": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Timestamp for Order Open Time"
    },
    "check_id": {
      "type": ["string", "null"],
      "description": "Check ID"
    },
    "server": {
      "type": ["string", "null"],
      "description": "Name of Server who created order"
    },
    "table": {
      "type": ["string", "null"],
      "description": "Number of Table"
    },
    "dining_area": {
      "type": ["string", "null"],
      "description": "Name of Dining Area"
    },
    "service": {
      "type": ["string", "null"],
      "description": "Daypart"
    },
    "dining_option": {
      "type": ["string", "null"],
      "description": "Dining Options (defined by restaurant)"
    },
    "item_selection_id": {
      "type": ["string", "null"],
      "description": "Item Selection ID"
    },
    "modifier_id": {
      "type": ["string", "null"],
      "description": "Modifier ID"
    },
    "master_id": {
      "type": ["string", "null"],
      "description": "Item Master ID"
    },
    "modifier_sku": {
      "type": ["string", "null"],
      "description": "Modifier SKU"
    },
    "modifier_plu": {
      "type": ["string", "null"],
      "description": "Modifier PLU"
    },
    "modifier": {
      "type": ["string", "null"],
      "description": "Modifier Name"
    },
    "option_group_id": {
      "type": ["string", "null"],
      "description": "Modifier Option Group ID"
    },
    "option_group_name": {
      "type": ["string", "null"],
      "description": "Modifier Option Group Name"
    },
    "parent_menu_selection_item_id": {
      "type": ["string", "null"],
      "description": "Parent Item Selection ID"
    },
    "parent_menu_selection": {
      "type": ["string", "null"],
      "description": "Parent Item Selection Name"
    },
    "sales_category": {
      "type": ["string", "null"],
      "description": "Sales Category Name"
    },
    "gross_price": {
      "type": ["number", "null"],
      "description": "Gross Price not including taxes"
    },
    "discnt": {
      "type": ["number", "null"],
      "description": "Discount"
    },
    "discount": {
      "type": ["number", "null"],
      "description": "Discount amount"
    },
    "net_price": {
      "type": ["number", "null"],
      "description": "Net Price (Gross Price less Discount)"
    },
    "qty": {
      "type": ["number", "null"],
      "description": "Quantity"
    },
    "void": {
      "type": ["boolean", "string", "null"],
      "description": "True or False"
    },
    "void_reason_id": {
      "type": ["string", "null"],
      "description": "Void Reason ID"
    },
    "void_reason": {
      "type": ["string", "null"],
      "description": "Reason for void"
    },
    "location_id": {
      "type": ["string", "null"],
      "description": "Location identifier from configuration"
    },
    "date": {
      "type": ["string", "null"],
      "description": "Date folder name from SFTP path"
    }
  },
  "required": ["location_id", "date"]
}
